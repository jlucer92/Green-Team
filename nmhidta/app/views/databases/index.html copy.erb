    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @databases.each do |database| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= database.last_name %></td>
    <td><%= database.first_name %></td>
    <td><%= database.dob %></td>
    <td><%= database.address %></td>
    <td><%= database.ssn %></td>
    <td><%= database.fbin %></td>
    
    <td>
<%= image_tag(database.picture, :class => 'list_image') %>
</td>
    
    <td><%= database.other1 %></td>
    <td><%= database.make %></td>
    <td><%= database.model %></td>
    <td><%= database.year %></td>
    <td><%= database.owner %></td>
    <td><%= database.registration %></td>
    <td><%= database.other2 %></td>
    <td><%= database.city %></td>
    <td><%= database.state %></td>
    <td><%= database.road %></td>
    <td><%= database.mile_marker %></td>
    <td><%= database.origin %></td>
    <td><%= database.destination %></td>
    <td><%= database.other3 %></td>
    <td><%= database.other4 %></td>
    <td><%= link_to 'Show', database %></td>
    <td><%= link_to 'Edit', edit_database_path(database) %></td>
    <td><%= button_to 'Remove', database, method: :delete, data: { confirm: 'Want to remove from database?' } %></td>
  </tr>
<% end %>
</table>
</div>

